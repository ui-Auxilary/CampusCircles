generator client {
  provider = "prisma-client-js"
  previewFeatures = ["reactNative"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./app.db"
}

model User {
  id            Int     @id @default(autoincrement())
  name          String
  email         String
  password      String
  profile       Profile?

  events        Event[]

  eventsCreated Event[] @relation("EventsCreated")
}

model EventTag {
  eventId Int @unique
  event Event @relation(fields: [eventId], references: [id])

  tagId Int @unique
  tag Tag @relation(fields: [tagId], references: [id])
}

model Tag {
  id    Int     @id @default(autoincrement())
  post  EventTag[]
}

model Event {
  id            Int           @id @default(autoincrement())
  name          String
  location      String
  date          String
  time          String
  description   String?
  public        Boolean       @default(true)
  tags          EventTag[]

  attendees     User[]

  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  creatorId Int @unique
  creator User @relation("EventsCreated", fields: [creatorId], references: [id])
}

model Profile {
  name        String
  photo       String
  gender      String
  age         String
  mbti        String
  bio         String
  interests   String // JSON String List
  courses     String // JSON String List

  userId  Int @unique
  user    User @relation(fields: [userId], references: [id])
}